<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="date_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="month_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tabText_style" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="tabLayout_style" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@android:color/background_light</item>
        <item name="tabIconTint">@color/mtrl_tabs_icon_color_selector_colored</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabRippleColor">@color/mtrl_tabs_colored_ripple_color</item>
        <item name="tabTextAppearance">@style/tabText_style</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="med_name_style">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <style name="med_dose_mealcontext_style">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/med_Item_sub_text_color</item>
    </style>

    <style name="med_task_action_btn_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

</resources>